		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
   <children>
      <HBox alignment="CENTER" prefHeight="29.0" prefWidth="200.0">
         <children>
            <TextField fx:id="classPath" prefHeight="26.0" prefWidth="258.0" />
