         </children>
      </HBox>
      <ScrollPane prefHeight="200.0" prefWidth="200.0">
         <content>
            <VBox fx:id="propertiesContainer" prefHeight="200.0" prefWidth="499.0" />
         </content>
      </ScrollPane>
      <TextArea fx:id="logBox" prefHeight="200.0" prefWidth="516.0" />
