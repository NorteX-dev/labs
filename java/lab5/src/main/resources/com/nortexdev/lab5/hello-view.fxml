<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="66.0" prefWidth="296.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nortexdev.lab5.UIController">
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
	<children>
		<HBox alignment="CENTER" prefHeight="28.0" prefWidth="193.0">
			<children>
				<ImageView fx:id="iconImg" fitHeight="23.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true" />
				<TextField fx:id="textField" onKeyTyped="#onType" prefHeight="28.0" prefWidth="264.0" />
			</children>
		</HBox>
      <Button fx:id="confirmBtn" disable="true" mnemonicParsing="false" text="Confirm" />
	</children>
</VBox>
